<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<main
            class="
               container
               bg-dark
               d-flex
               flex-column
               justify-content-center
               align-items-center
               p-5
            "
         >
<h2 class="text-white pb-4">MIS CARDS</h2>
   <% if (cards.length === 0) { %>  
      <h1 class="text-white">No tenes cards creadas por el momento</h1>
   <% } else { %>  
        <% cards.forEach(card => { %> 
          <div class="card text-white mb-5 myCard">
            <h2 class="p-2 text-center"><%= card.nickname %></h2>
            <div class="d-flex justify-content-between p-3">
                <div class="col-8 d-flex justify-content-around align-items-center">
                    <div>
                        <h4>DIGIVICE</h4>
                        <img class="imgTarjeta" src=<%= card.digivice %> alt="">
                    </div>
                    <div>
                        <h4>EMBLEMA</h4>
                        <img class="imgTarjeta" src=<%= card.emblema %> alt="">
                    </div>
                </div>
                <div class="col-4 d-flex justify-content-center">
                    <img class="imgPersonaje" src=<%= card.personaje %> alt="">
                </div>
              </div>
              <div class="card-body d-flex justify-content-around">
                  <div>
                      <h5 class="card-title text-center">Biyomon</h5>
                      <img class="imgTarjeta" src=<%= card.digimon1 %> alt="">
                      <p class="card-text">LEVEL : Rookie</p>
                  </div>
                  <div>
                      <h5 class="card-title text-center">Biyomon</h5>
                      <img class="imgTarjeta" src=<%= card.digimon2 %>  alt="">
                      <p class="card-text">LEVEL : Rookie</p>
                  </div>          <div>
                      <h5 class="card-title text-center">Biyomon</h5>
                      <img class="imgTarjeta" src=<%= card.digimon3 %>  alt="">
                      <p class="card-text">LEVEL : Rookie</p>
                  </div>          
                  <div>
                      <h5 class="card-title text-center">Biyomon</h5>
                      <img class="imgTarjeta" src=<%= card.digimon4 %>  alt="">
                      <p class="card-text">LEVEL : Rookie</p>
                  </div>
                </div>
                <h4 class="text-center">Power = 25.144</h4>
                <div class="text-center">
                  <a href="/editar-card/<%= card._id %> "><button type="submit" class="btn btn-warning text-center m-2">
                      EDITAR
                    </button></a>
                    <a href="/borrar-card/<%= card._id %> "><button type="submit" class="btn btn-danger text-center m-2">
                    BORRAR
                    </button></a>
                </div>
        </div>
       <% }) %>  
   <% } %>  

</main>
<%- include("partials/footer.ejs") %>
</body>
</html>
