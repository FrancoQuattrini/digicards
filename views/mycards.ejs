<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<main
            class="
               container
               bg-dark
               d-flex
               flex-column
               justify-content-center
               align-items-center
               p-5
            "
         >
<h1 class="text-white pb-4">MIS CARDS</h1>
   <% if (cards.length === 0) { %>
    <div>
        <h2 class="text-white text-center">No tenes cards creadas por el momento</h2>
        <h2 class="text-white text-center">Puedes crear una aqu√≠</h2>
        <a href="/card/<%= userId %>"><button class="btn btn-light hovee text-center col-12 py-2 mt-5">
            Crear Card
            </button></a>
    </div>  

   <% } else { %>  
        <% cards.forEach(card => { %> 
          <div class="card text-white mb-5 myCard">
            <h2 class="pt-2 text-center fw-bold"><%= card.nickname %></h2>
            <div class="d-flex justify-content-between py-1 ps-4 pe-4">
                <div class="col-8 d-flex justify-content-around align-items-center">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h4>Mi Digivice</h4>
                        <img class="imgTarjeta pt-4" src=<%= card.digivice %> alt="">
                    </div>
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h4>Mi emblema</h4>
                        <img class="imgTarjeta pt-2" src=<%= card.emblema %> alt="">
                    </div>
                </div>
                <div class="col-4 d-flex justify-content-center align-items-center">
                    <img class="imgPersonaje" src=<%= card.personaje %> alt="">
                </div>
              </div>
              <div class="card-body d-flex justify-content-around">
                  <div>
                      <img class="imgTarjetaDigimon" src=<%= card.digimon1 %> alt="">
                  </div>
                  <div>
                      <img class="imgTarjetaDigimon" src=<%= card.digimon2 %>  alt="">
                  </div>          
                  <div>
                      <img class="imgTarjetaDigimon" src=<%= card.digimon3 %>  alt="">
                  </div>          
                  <div>
                      <img class="imgTarjetaDigimon" src=<%= card.digimon4 %>  alt="">
                  </div>
                </div>
                <div class="d-flex justify-content-around bg-dark p-1 my-3">
                    <h4><span class="text-danger fw-bold">Poder: </span><%= (Math.random() * 50000).toFixed(0) %> PX</h4>
                    <h4><span class="text-info fw-bold">HP: </span><%= (Math.random() * 50000).toFixed(0) %> PX</h4>
                    <h4><span class="text-success fw-bold">Agilidad: </span><%= (Math.random() * 50000).toFixed(0) %> PX</h4>
                </div>
                <div class="text-center">
                  <a href="/editar-card/<%= card.id %>"><button type="submit" class="btn btn-primary text-white m-2 mb-4 col-3">
                      EDITAR
                    </button></a>
                    <a href="/borrar-card/<%= card.id %>"><button type="submit" class="btn btn-danger text-white m-2 mb-4 col-3">
                    BORRAR
                    </button></a>
                </div>
        </div>
       <% }) %>  
   <% } %>  

</main>
<%- include("partials/footer.ejs") %>
<script src="/main.js"></script>
</body>
</html>
